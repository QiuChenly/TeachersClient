<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/m_LinearLayout_mAllClassMateView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/background" />

        <LinearLayout
            android:layout_width="62sp"
            android:layout_height="62sp"
            android:layout_gravity="top|left"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/m_TextView_mAllClassMate_studentNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="1"
                android:textSize="55dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62sp"
            android:layout_gravity="bottom|center"
            android:background="@mipmap/group_login_background"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62sp"
                android:layout_gravity="bottom|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/m_TextView_mAllClassMate_studentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="学生姓名" />

                <TextView
                    android:id="@+id/m_TextView_mAllClassMate_studentId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="学生学号" />

                <TextView
                    android:id="@+id/m_TextView_mAllClassMate_studentMobileNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="学生手机号" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>